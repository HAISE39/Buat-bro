if not gg then os.exit() end
gg.setVisible(false)
local base = gg.getRangesList("libil2cpp.so")[1].start

-- Offset AddListNormalAttackFrame (float)
local offset_attack_frame = 0x2AA2354
local addr_attack_frame = base + offset_attack_frame

-- Offset SetAnimatorWalkSpeed (int)
local offset_anim_speed = 0x2AA234C
local addr_anim_speed = base + offset_anim_speed

-- Menu pilihan speed
local menu = gg.choice({
  "‚ö° 10x Attack Speed",
  "‚ö° 20x Attack Speed",
  "‚ö° 30x Attack Speed",
  "‚ö° 50x Attack Speed",
  "‚ö° 100x Attack Speed",
  "‚ùå Keluar"
}, nil, "Pilih multiplier untuk Basic Attack:")

local speeds = {10.0, 20.0, 30.0, 50.0, 100.0}

if menu ~= nil and menu ~= 6 then
  local speedValue = speeds[menu]

  -- Patch frame value (float)
  gg.setValues({
    {address = addr_attack_frame, flags = gg.TYPE_FLOAT, value = speedValue}
  })

  -- Patch animator speed (int)
  gg.setValues({
    {address = addr_anim_speed, flags = gg.TYPE_DWORD, value = speedValue}
  })

  gg.toast("‚ö° Attack Speed di-set ke "..speedValue.."x")
else
  gg.toast("‚ùå Batal")
end

-- Restore function
function restore()
  gg.setValues({{address = addr_attack_frame, flags = gg.TYPE_FLOAT, value = 1.0}})
  gg.setValues({{address = addr_anim_speed, flags = gg.TYPE_DWORD, value = 1}})
  gg.toast("üîÑ Dikembalikan ke normal")
end
